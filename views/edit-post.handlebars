<h1 class="page-title">
        <a href="/dashboard" class="bg-secondary rounded text-dark px-3 py-1 text-decoration-none">Your Dashboard</a>
      </h1>
    </header>
    <main>
<form class="edit-post-form edit-post-container bg-secondary mx-auto border-dark">
  <h3 class="bg-dark text-secondary edit-title">Edit Post</h3>
  <div class="p-2">
    <label class="text-dark">Title</label>
    <input class="text-dark form-control" type="text" name="post-title" id="post-title" value="{{post.title}}" />
  </div>
  <div class="p-2">
    <label class="text-dark">Content</label>
    <input class="text-dark form-control post-content-input" type="text" name="post-content" id="post-content" value="{{post.content}}" />
  </div>
  <div class="p-2">
    <button type="submit" class="edit-button btn btn-success form-control">Update Post</button>
    <button type="button" class="edit-button delete-post-btn btn btn-success form-control">Delete</button>
  </div>
</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>