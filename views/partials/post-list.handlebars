<article class="post mx-auto border-dark">
  <div class="d-flex align-items-center justify-content-between bg-dark p-1">
    <div>
        <a class="post-title text-decoration-none text-secondary" href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta text-secondary post-meta">
      Posted by {{user.username}} on {{format_date created_at}}
    </div>
  </div>
  <div class="">
      <p class="text-black bg-secondary post-content">{{content}}</p>
  </div>
</article>