<div class="comment-container mx-auto border-dark">
  <div class="p-3 bg-dark">
    <h4 class="text-secondary">Comments</h4>
  </div>
  {{#if this}}
  {{#each this}}
  <section class="p-3">
    <div class="text comment-body text-dark">
      {{comment_text}}
    </div>
    <div class="meta comment-body text-dark">
      -{{user.username}}, {{format_date created_at}}
    </div>
  </section>
  {{/each}}
  {{else}}
  <section class="p-3">
    <div class="text comment-body text-dark">
      No Comments
    </div>
  </section>
  {{/if}}
</div>